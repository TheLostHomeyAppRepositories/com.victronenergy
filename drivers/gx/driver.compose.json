        "sv": "Elnät"
      }
    },
    "measure_power.battery": {
      "title": {
        "en": "Battery",
        "sv": "Batteri"
      }
    },
    "measure_power.PV": {
      "title": {
        "en": "Solar",
        "sv": "Solceller"
      }
    },
    "measure_voltage.battery": {
      "title": {
        "en": "Battery voltage",
        "sv": "Batterispänning"
      }
    },
    "measure_current.battery": {
      "title": {
        "en": "Battery current",
        "sv": "Batterisström"
      }
    }
